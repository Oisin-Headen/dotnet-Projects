@using ABCCC.Models
@model AbstractMovie

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Movie
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            Description
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LongDescription)
        </dd>
        <dt>
        </dt>
        <dd>
            <img src="@Url.Content(Model.ImageUrl)" />
        </dd>
        @if (Model.GetType() == typeof(MovieComingSoon))
        {
            <dt>
                Release Date
            </dt>
            <dd>
                @Html.DisplayFor(model => ((MovieComingSoon)model).ReleaseDate)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Back to Movies</a>
</div>
