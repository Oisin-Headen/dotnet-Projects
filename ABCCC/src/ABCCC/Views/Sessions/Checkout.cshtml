@model ABCCC.Models.CCInformation
@{
    ViewData["Title"] = "Checkout";
}
<h2>Checkout</h2>

<h4>Enter Credit Card Information:</h4>
<form asp-action="Transaction">
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" type="text" name="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Number" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Number" type="text" name="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ExpiryMonth" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ExpiryMonth" type="number" name="ExpiryMonth" class="form-control" />
                <span asp-validation-for="ExpiryMonth" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ExpiryYear" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ExpiryYear" type="number" name="ExpiryYear" class="form-control" />
                <span asp-validation-for="ExpiryYear" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CCV" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CCV" type="number" name="CCV" class="form-control" />
                <span asp-validation-for="CCV" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Book Seats" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}