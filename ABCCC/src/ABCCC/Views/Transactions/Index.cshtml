@model IEnumerable<ABCCC.Models.Transaction>

@{ 
    ViewData["Title"] = "Transactions";
}
<h2>Transactions</h2>
@if (Model.Count() > 0)
{
<table class="table">
    <thead>
        <tr>
            <th>Transaction Id</th>
            <th>Credit Card Name</th>
            <th>Bookings</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var transaction in Model)
    {
        <tr>
            <td>@transaction.TransactionId</td>
            <td>@transaction.CreditCard.Name</td>
            <td>
                <a asp-action="Booking" asp-route-Id="@transaction.TransactionId">View Bookings</a>
            </td>
        </tr>
    }
    </tbody>
</table>
}
else
{
    <p>No one has booked through this website.</p>
}